<% include ../partials/header %>


<div class="container">
	<div class="row">
		<h1 style="text-align:center;">
			Edit <%= campground.name %>
		</h1>
		<div style="width:30%; margin: 23px auto;">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="name" name="campground[name]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="campground[image]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="description" name="campground[description]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
	<!-- forms need an action(where to go) and a method(post/get/etc) -->
</div>
<% include ../partials/footer %>